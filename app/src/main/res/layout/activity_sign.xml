<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Header -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/primary_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:contentDescription="@string/dhl_logo_desc"
                android:scaleType="centerInside"
                android:src="@drawable/dhl_logo"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/signature_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/dhl_red"
                android:fontFamily="sans-serif-medium" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Signature Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/signatureCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/primary_background"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/instructionCard"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/please_sign_below"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/accent_border"
                android:layout_marginBottom="8dp" />

            <com.error.dhlvisitornotification.SignatureView
                android:id="@+id/signatureArea"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/primary_background" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/dhl_red"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Instruction Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/instructionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="@color/accent_light"
        app:layout_constraintBottom_toTopOf="@id/buttonContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/signature_instruction"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:padding="16dp"
            app:drawableStartCompat="@drawable/ic_info"
            android:drawablePadding="8dp"
            app:drawableTint="@color/dhl_yellow" />

    </androidx.cardview.widget.CardView>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/progressIndicator"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/clear_signature"
            android:textSize="16sp"
            android:textColor="@color/text_on_primary"
            app:backgroundTint="@color/button_secondary"
            app:cornerRadius="12dp"
            android:layout_marginEnd="8dp"
            app:icon="@drawable/ic_clear"
            app:iconTint="@color/text_on_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="@string/send_notification"
            android:textSize="16sp"
            android:textColor="@color/text_on_primary"
            app:backgroundTint="@color/dhl_red"
            app:cornerRadius="12dp"
            android:layout_marginStart="8dp"
            app:icon="@drawable/ic_send"
            app:iconTint="@color/text_on_primary" />

    </LinearLayout>

    <!-- Progress Indicator -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:indicatorColor="@color/dhl_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>