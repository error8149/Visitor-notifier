<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp">

    <!-- Success Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/successCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/primary_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="40dp"
            android:gravity="center">

            <!-- DHL Logo -->
            <ImageView
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:contentDescription="@string/dhl_logo_desc"
                android:src="@drawable/dhl_logo"
                android:layout_marginBottom="24dp"
                android:scaleType="fitCenter" />

            <!-- Success Icon -->
            <ImageView
                android:id="@+id/successIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_success"
                android:layout_marginBottom="24dp"
                android:background="@drawable/circle_success_background"
                android:padding="20dp"
                android:contentDescription="@string/success_icon_desc" />

            <!-- Success Title -->
            <TextView
                android:id="@+id/thankYouTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thank_you_message"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/dhl_red"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Success Message -->
            <TextView
                android:id="@+id/thankYouMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/thank_you_detail"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="4dp" />

            <!-- Detail Message -->
            <TextView
                android:id="@+id/thankYouDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reception_notification"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/accent_border"
                android:layout_marginBottom="24dp" />

            <!-- Back Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/back_to_home"
                android:textSize="16sp"
                android:textColor="@color/text_on_primary"
                app:backgroundTint="@color/dhl_red"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_home"
                app:iconTint="@color/text_on_primary" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>